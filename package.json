{
  "name": "liquidb",
  "version": "1.0.0",
  "description": "Modern Database Management for macOS",
  "author": "LiquidB",
  "license": "MIT",
  "homepage": "https://liquidb.app",
  "repository": {
    "type": "git",
    "url": "https://github.com/alexg-sh/LiquiDB"
  },
  "keywords": [
    "database",
    "management",
    "macos",
    "electron",
    "react",
    "tailwind",
    "typescript"
  ],
  "main": "electron-dist/electron/main.js",
  "private": true,
  "scripts": {
    "preload:build": "tsc -p tsconfig.preload.json",
    "helper:build": "tsc -p tsconfig.helper.json",
    "electron:compile": "tsc -p tsconfig.electron.json",
    "dev": "npm run electron:compile && npm run preload:build && npm run helper:build && concurrently \"next dev --turbopack\" \"wait-on http://localhost:3000 && NODE_OPTIONS='--import tsx' USE_DEV_SERVER=true electron .\"",
    "dev:minimal": "npm run electron:compile && npm run preload:build && LOG_LEVEL=ERROR concurrently \"next dev\" \"wait-on http://localhost:3000 && NODE_OPTIONS='--import tsx' USE_DEV_SERVER=true electron .\"",
    "dev:quiet": "npm run electron:compile && npm run preload:build && LOG_LEVEL=WARN concurrently \"next dev\" \"wait-on http://localhost:3000 && NODE_OPTIONS='--import tsx' USE_DEV_SERVER=true electron .\"",
    "dev:normal": "npm run electron:compile && npm run preload:build && LOG_LEVEL=INFO concurrently \"next dev\" \"wait-on http://localhost:3000 && NODE_OPTIONS='--import tsx' USE_DEV_SERVER=true electron .\"",
    "dev:debug": "npm run electron:compile && npm run preload:build && LOG_LEVEL=DEBUG concurrently \"next dev\" \"wait-on http://localhost:3000 && NODE_OPTIONS='--import tsx' USE_DEV_SERVER=true electron .\"",
    "dev:verbose": "npm run electron:compile && npm run preload:build && LOG_LEVEL=VERBOSE concurrently \"next dev\" \"wait-on http://localhost:3000 && NODE_OPTIONS='--import tsx' USE_DEV_SERVER=true electron .\"",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "electron": "tsx electron/main.ts",
    "version:update": "tsx scripts/update-version.ts",
    "release:notes": "tsx scripts/generate-release-notes.ts",
    "electron:build": "npm run electron:compile && next build && electron-builder",
    "electron:build:mac": "npm run electron:compile && next build && electron-builder --mac",
    "electron:build:win": "npm run electron:compile && next build && electron-builder --win",
    "electron:build:linux": "npm run electron:compile && next build && electron-builder --linux",
    "electron:build:mac:verbose": "npm run electron:compile && next build && DEBUG=\"electron-builder\" electron-builder --mac",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "asar": true,
    "publish": {
      "provider": "github",
      "owner": "alexg-sh",
      "repo": "LiquiDB"
    },
    "appId": "com.liquidb.app",
    "productName": "LiquiDB",
    "files": [
      "electron-dist/**/*",
      "helper/**/*",
      "helper-dist/**/*",
      "out/**/*",
      "public/**/*",
      "package.json",
      "!node_modules/sharp/**/*",
      "!node_modules/@img/sharp-darwin-arm64/**/*",
      "!node_modules/@next/swc-darwin-arm64/**/*"
    ],
    "asarUnpack": [
      "**/*.node",
      "build/**",
      "out/**",
      "helper/**",
      "helper-dist/**"
    ],
    "directories": {
      "buildResources": "build"
    },
    "dmg": {
      "background": "build/dmg-background.png",
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "identity": null,
      "icon": "build/icon.icns",
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Development",
      "vendor": "LiquidB"
    }
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.21.0",
    "@radix-ui/react-alert-dialog": "1.1.4",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "2.1.4",
    "@radix-ui/react-label": "2.1.1",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-scroll-area": "1.2.2",
    "@radix-ui/react-select": "2.1.4",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "1.1.2",
    "@radix-ui/react-tabs": "^1.1.2",
    "@radix-ui/react-toast": "1.2.4",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@types/canvas-confetti": "^1.9.0",
    "@vercel/analytics": "1.5.0",
    "archiver": "^7.0.1",
    "auto-launch": "^5.0.6",
    "canvas-confetti": "^1.9.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "4.1.0",
    "electron-updater": "^6.6.2",
    "framer-motion": "*",
    "geist": "^1.5.1",
    "lucide-react": "^0.454.0",
    "next": "15.5.4",
    "next-themes": "^0.4.6",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "recharts": "2.15.4",
    "sonner": "^1.7.4",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@tailwindcss/postcss": "^4.1.9",
    "@types/archiver": "^7.0.0",
    "@types/auto-launch": "^5.0.5",
    "@types/node": "^22.19.0",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "concurrently": "^9.1.2",
    "electron": "^39.0.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.39.0",
    "eslint-config-next": "^15.5.4",
    "postcss": "^8.5",
    "tailwindcss": "^4.1.9",
    "tsx": "^4.20.6",
    "tw-animate-css": "1.3.3",
    "typescript": "^5",
    "wait-on": "^8.0.1"
  }
}
