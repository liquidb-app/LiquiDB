{
  "name": "liquidb",
  "version": "1.0.0",
  "description": "Modern Database Management for macOS",
  "author": "LiquidB",
  "license": "MIT",
  "homepage": "https://liquidb.app",
  "repository": {
    "type": "git",
    "url": "https://github.com/alexg-sh/LiquiDB"
  },
  "keywords": [
    "database",
    "management",
    "macos",
    "electron",
    "react",
    "tailwind",
    "typescript"
  ],
  "main": "electron/main.js",
  "private": true,
  "scripts": {
    "dev": "concurrently \"next dev --turbopack\" \"wait-on http://localhost:3000 && electron .\"",
    "dev:minimal": "LOG_LEVEL=ERROR concurrently \"next dev\" \"wait-on http://localhost:3000 && electron .\"",
    "dev:quiet": "LOG_LEVEL=WARN concurrently \"next dev\" \"wait-on http://localhost:3000 && electron .\"",
    "dev:normal": "LOG_LEVEL=INFO concurrently \"next dev\" \"wait-on http://localhost:3000 && electron .\"",
    "dev:debug": "LOG_LEVEL=DEBUG concurrently \"next dev\" \"wait-on http://localhost:3000 && electron .\"",
    "dev:verbose": "LOG_LEVEL=VERBOSE concurrently \"next dev\" \"wait-on http://localhost:3000 && electron .\"",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "electron": "electron .",
    "prepare:standalone": "node scripts/prepare-standalone.js",
    "prepare:node": "node scripts/download-node.js",
    "electron:build": "npm run prepare:node && next build && npm run prepare:standalone && electron-builder && node scripts/post-build.js",
    "electron:build:mac": "npm run prepare:node && next build && npm run prepare:standalone && electron-builder --mac && node scripts/post-build.js",
    "electron:build:win": "npm run prepare:node && next build && npm run prepare:standalone && electron-builder --win && node scripts/post-build.js",
    "electron:build:linux": "npm run prepare:node && next build && npm run prepare:standalone && electron-builder --linux && node scripts/post-build.js",
    "postinstall": "electron-builder install-app-deps || true"
  },
  "build": {
    "appId": "com.liquidb.app",
    "productName": "LiquiDB",
    "files": [
      "electron/**/*",
      ".next/standalone/**/*",
      "!resources/**/*",
      "package.json"
    ],
    "asarUnpack": [
      ".next/standalone/**/*"
    ],
    "extraResources": [
      {
        "from": "resources/bin/${arch}",
        "to": "bin",
        "filter": ["**/*"]
      }
    ],
    "directories": {
      "buildResources": "public"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg",
        "zip"
      ],
      "type": "distribution",
      "hardenedRuntime": false,
      "gatekeeperAssess": false
    },
    "dmg": {
      "writeUpdateInfo": false
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Development"
    }
  },
  "dependencies": {
    "@hookform/resolvers": "^3.10.0",
    "@radix-ui/react-alert-dialog": "1.1.4",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "2.1.4",
    "@radix-ui/react-label": "2.1.1",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-scroll-area": "1.2.2",
    "@radix-ui/react-select": "2.1.4",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "1.1.2",
    "@radix-ui/react-tabs": "^1.1.2",
    "@radix-ui/react-toast": "1.2.4",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@types/canvas-confetti": "^1.9.0",
    "@vercel/analytics": "1.5.0",
    "archiver": "^7.0.1",
    "auto-launch": "^5.0.6",
    "canvas-confetti": "^1.9.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "1.0.4",
    "date-fns": "4.1.0",
    "framer-motion": "*",
    "geist": "^1.5.1",
    "lucide-react": "^0.454.0",
    "motion": "^12.23.24",
    "next": "15.5.4",
    "next-themes": "^0.4.6",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.60.0",
    "recharts": "2.15.4",
    "sonner": "^1.7.4",
    "tailwind-merge": "^3.3.1",
    "zod": "3.25.76"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@tailwindcss/postcss": "^4.1.9",
    "@types/node": "^22",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "concurrently": "^9.1.2",
    "electron": "^39.0.0",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "eslint": "^9.39.0",
    "eslint-config-next": "^15.5.4",
    "postcss": "^8.5",
    "tailwindcss": "^4.1.9",
    "tw-animate-css": "1.3.3",
    "typescript": "^5",
    "wait-on": "^8.0.1"
  },
  "overrides": {
    "glob": "^10.4.5",
    "rimraf": "^5.0.0",
    "@npmcli/move-file": "npm:@npmcli/fs@^3.0.0"
  }
}
